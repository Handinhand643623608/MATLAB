function a_xcorr_EEG_BOLD(fileStruct, paramStruct)
%% Initialize
% Change relevant values in the parameter structure
paramStruct.xcorr.EEG_BOLD = struct(...
    'subjects', [paramStruct.general.subjects],...
    'scans', {paramStruct.general.scans},...
    'shiftsTime', [-20:2:10],...
    'electrodes', {{'FPZ' 'P8'}},...
    'imageSlices', [48:4:64],...
    'imageShifts', [1:3:16],...
    'alphaVal', 0.01,...
    'comments', 'FPZ/P8-BOLD correlations trying to fix significance thresholding');

% Change relevant values in the file structure
fileStruct.analysis.xcorr.EEG_BOLD = struct(...
    'eegDataFile', [fileStruct.paths.MAT_files '\EEG\eegData_dc.mat'],...
    'boldDataPath', [fileStruct.paths.MAT_files '\BOLD'],...
    'savePath', [fileStruct.paths.MAT_files '\xcorr'],...
    'saveID', '20130113');
save(fileStruct.files.masterStructs, 'fileStruct', 'paramStruct')

%% Run the Analysis
% Perform the cross-correlation
arx_realEB(fileStruct, paramStruct);

% Generate a null distribution of correlation for bootstrapping
arx_nullEB(fileStruct, paramStruct);

% Average together cross-correlation & null data to reduce data size
ara_corrEB(fileStruct, paramStruct);

% Bootstrap the data for significance
arb_corrEB(fileStruct, paramStruct);

% Image the cross-correlations
ai_corrEB(fileStruct, paramStruct);